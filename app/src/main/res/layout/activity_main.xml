<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        tools:context=".MainActivity">

    <TextView
        style="@style/style"
        android:hint="Booking System"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/tvcheck"
        style="@style/style"
        android:text="Check Date"
       />
    <TextView
        android:id="@+id/etcheck"
        style="@style/style"
        android:hint="MM/DD/YY"
        />
    <TextView
        android:id="@+id/tvcheckout"
        style="@style/style"
        android:text="CheckOut Date"
        />
    <TextView
        android:id="@+id/etcheckout"
        android:hint="MM/DD/YY"
        style="@style/style"
        />
    <TextView
        android:id="@+id/tvroom"
        style="@style/style"
        android:text="Select Room Type"
        />
    <Spinner
        android:id="@+id/spi"
        style="@style/style"
        android:padding="20dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:rowCount="2"
        android:columnCount="3">

        <TextView
            android:layout_width="wrap_content"
            android:text="Adult"
            style="@style/RoomType"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Children"
            style="@style/RoomType"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Rooms"
            style="@style/RoomType"/>

        <EditText
            android:id="@+id/AdultNo"
            android:layout_width="wrap_content"
            android:hint="0"
            android:inputType="number"
            style="@style/RoomType"
            />

        <EditText
            android:id="@+id/ChildNo"
            android:layout_width="wrap_content"
            android:hint="0"
            android:inputType="number"
            style="@style/RoomType"
            />
        <EditText
            android:id="@+id/RoomNo"
            android:layout_width="wrap_content"
            android:hint="0"
            android:inputType="number"
            style="@style/RoomType"
            />

    </GridLayout>



    <Button
        android:id="@+id/btncal"
        style="@style/style"
        android:text="Calculate"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvprice"
        android:hint="Price"
        android:visibility="invisible"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:id="@+id/tvRes"/>

    </LinearLayout>

</ScrollView>